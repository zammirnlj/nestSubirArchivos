<div class="card">

    <div class="card-header bg-dark" >

<h3 class="card-title text-white">

    <i class="far fa-image"></i> Upload and Image


</h3>
    </div>
    <div class="card-body">

        <form action="/images" method="POST">
        
        <div class="form-group">

            <div class="input-group">
                <div class="custom file">
                    <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
                    <label class="custom-file-label" for="inputGroupFile">Choose file</label>
                </div>


            </div>

        </div>

        <div class="form-group p-1">
            <input type="text" name="title" class="form-control" placeholder="Titulo para la imagen" required>
        </div>

        <div class="form-group p-1">
            <textarea name="description" rows="2" class="form-control" placeholder="Descripcion para la imagen" required></textarea>
        </div>

        <div class="form-group p-1">
            <button class="btn btn-success">
                <i class="fa fa-upload"></i> UPLOAD TO IMAGEN
                </button>
        </div>


        </form>

    </div>

</div>